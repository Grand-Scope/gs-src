---

<!-- Spacer to allow scroll past content to reveal footer -->
<div class="relative z-10 bg-brand-500 h-[50px] md:h-[0px]"></div>

<footer
  class="sticky bottom-0 left-0 w-full z-0 bg-black text-white px-6 py-12 md:py-0 h-auto md:min-h-[550px] flex flex-col justify-center"
>
  <!-- Overlay to ensure content above covers it -->

  <div class="border-t-2 border-black/10"></div>
  <div class="container mx-auto">
    <div class="flex flex-col gap-10 items-start">
      <!-- Brand -->
      <div>
        <h4
          class="font-display text-[clamp(2rem,5vw,3.75rem)] text-white mb-3 leading-tight break-words"
        >
          GRANDSCOPE
        </h4>
        <p class="font-mono text-[11px] text-brand-500 font-bold uppercase">
          Chase The Impossible
        </p>
      </div>

      <!-- Info Sections: Contact & Social -->
      <div class="flex flex-col md:flex-row gap-10 md:gap-12 lg:gap-16 w-full">
        <!-- Contact -->
        <div
          class="font-mono text-[11px] uppercase text-white/50 leading-relaxed flex-1"
        >
          <span class="text-brand-500 font-bold block mb-3">Contact</span>
          rex@grandscope.io<br />
          +880 1329-830893<br />
          Banani, Dhaka, BD
        </div>

        <!-- Social -->
        <div class="font-mono text-[11px] uppercase flex-1">
          <span class="text-brand-500 font-bold block mb-3">Social</span>
          <div class="flex flex-wrap gap-x-6 gap-y-2 text-white/50">
            <a
              href="#"
              class="hover:text-brand-500 hover:translate-x-1 transition-all inline-block"
              >Facebook</a
            >
            <a
              href="#"
              class="hover:text-brand-500 hover:translate-x-1 transition-all inline-block"
              >Instagram</a
            >
            <a
              href="#"
              class="hover:text-brand-500 hover:translate-x-1 transition-all inline-block"
              >LinkedIn</a
            >
            <a
              href="#"
              class="hover:text-brand-500 hover:translate-x-1 transition-all inline-block"
              >X.com</a
            >
            <a
              href="#"
              class="hover:text-brand-500 hover:translate-x-1 transition-all inline-block"
              >TikTok</a
            >
          </div>
        </div>
      </div>
    </div>

    <div
      class="mt-16 pt-8 border-t-2 border-white/10 flex flex-col md:flex-row justify-between items-center gap-4"
    >
      <p class="font-mono text-[10px] uppercase text-white/20">
        &copy; 2026 GrandScope. All rights reserved.
      </p>
      <div class="flex items-center gap-4">
        <span class="font-mono text-[10px] uppercase text-white/20"
          >Status: Operational</span
        >
        <div class="w-2.5 h-2.5 bg-brand-500 rounded-full animate-pulse"></div>
      </div>
    </div>
  </div>
</footer>
